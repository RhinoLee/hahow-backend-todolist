extends layout

block content
  div
    #top.container-fluid
      .row
        .col-3
          #weather.txt-center
            img.icon(src="./img/sunny.png")
            span 36&deg;C
        .col-6
          #title.txt-center
            h1 TODO LIST
        .col-3
          #login-info.txt-center
            img.headshot
            if user
              span #{user.name} | 登出
            else
              span 登入
    #content.conainer-fluid
      .row
        .col-md-3
          #left-block
        .col-md-9
          #right-block
            #additem.txt-center
              form(method="POST" action="/items")
                input.input-control(type="date" name="itemDate")
                input.input-control(type="text" name="itemText" placeholder="看線上課程一單元")
            hr
            each items, date in LIST
              .date-todo
                h3= date
                .row
                  .col-md-2
                    h2 DOING
                  .col-md-10
                    ul
                      each item in items.doing
                        li
                          .item
                            input(type="checkbox")
                            span= item.text
                            input.close(type="button", value="x")